	Title="Tazmin" xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit" Loaded="Page_Loaded" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid MinHeight="768" MinWidth="1024" x:Name="layoutRoot">
