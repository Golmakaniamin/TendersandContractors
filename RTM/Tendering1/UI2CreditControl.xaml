            <Label Content="* تاریخ درخواست کنترل اعتبار :" FlowDirection="RightToLeft" FontFamily="B Nazanin" FontSize="20" HorizontalAlignment="Right" HorizontalContentAlignment="Left" Margin="0,338,56,70" x:Name="label9" VerticalContentAlignment="Center" Width="208" d:LayoutOverrides="VerticalAlignment" />
            <Label Content="* شماره درخواست کنترل اعتبار :" FlowDirection="RightToLeft" FontFamily="B Nazanin" FontSize="20" HorizontalAlignment="Right" HorizontalContentAlignment="Left" Margin="0,338,520,70" x:Name="label10" VerticalContentAlignment="Center" Width="223" />
            <Label Content="* تاریخ کنترل اعتبار :" FlowDirection="RightToLeft" FontFamily="B Nazanin" FontSize="20" HorizontalContentAlignment="Left" Margin="0,0,520,34" x:Name="label11" VerticalContentAlignment="Center" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="157" />
            <Label Content="کنترل اعتبار" FlowDirection="RightToLeft" FontFamily="B Nazanin" FontSize="20" Height="50" HorizontalAlignment="Right" HorizontalContentAlignment="Left" Margin="0,62,32,0" x:Name="label24" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="87.667" />
            <Label Content="توضیحات :" FlowDirection="RightToLeft" FontFamily="B Nazanin" FontSize="20" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Margin="800,70,0,188" x:Name="label19" VerticalContentAlignment="Center" Width="144" Grid.Row="1" />
            <my:DatePicker SelectedDate="{Binding FundingRequestDate}" FlowDirection="RightToLeft" Height="27" Name="ReqDateDP" Margin="524,350,270,82" TabIndex="0" IsEnabled="False" />
            <my:DatePicker SelectedDate="{Binding FundingControlDate}" FlowDirection="RightToLeft" Height="27" Margin="60,388,736,44" Name="CreditControlDP" TabIndex="3" IsEnabled="False" />
            <Button Content="حذف تصویر" FontFamily="B Nazanin" FontSize="17" FontWeight="Normal" Height="32" HorizontalAlignment="Left" Margin="86,188,0,0" Name="DelPicBtn" TabIndex="11" VerticalAlignment="Top" Width="130" Grid.Row="1" Click="DelPicBtn_Click" />
            <my1:TenderingHeaderControl HorizontalAlignment="Left" Margin="36,114,0,0" x:Name="Header" VerticalAlignment="Top" />
        </Grid>
    </Grid>
</Page>
