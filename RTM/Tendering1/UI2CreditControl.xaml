            <TextBox Text="{Binding FundingPlace}" FlowDirection="RightToLeft" FontFamily="B Nazanin" FontSize="20" FontWeight="Normal" HorizontalContentAlignment="Right" HorizontalScrollBarVisibility="Auto" Margin="98,447,321.5,289" MaxLines="5" TabIndex="5" TextAlignment="Left" TextWrapping="Wrap" UseLayoutRounding="False" VerticalContentAlignment="Center" x:Name="CreditSourceTxt" IsEnabled="False" Grid.RowSpan="2" />
