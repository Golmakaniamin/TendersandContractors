            <TextBox Text="{Binding FundingRequestNumber}" FlowDirection="RightToLeft" FontFamily="B Nazanin" FontSize="20" FontWeight="Normal" HorizontalContentAlignment="Right" HorizontalScrollBarVisibility="Auto" Margin="59.778,347,736.222,80" MaxLines="5" x:Name="CreditControlNomTxt" TabIndex="1"  TextAlignment="Left" TextWrapping="Wrap" UseLayoutRounding="False" VerticalContentAlignment="Center" IsEnabled="False" />
            <TextBox Text="{Binding FundingControlNote}" FlowDirection="RightToLeft" FontFamily="B Nazanin" FontSize="18" FontWeight="Normal" HorizontalContentAlignment="Right" HorizontalScrollBarVisibility="Auto" Margin="86.5,82.218,159.5,123.782" MaxLines="5" x:Name="DescriptionTxt" TabIndex="8"  TextAlignment="Left" TextWrapping="Wrap" UseLayoutRounding="False" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" VerticalScrollBarVisibility="Auto" Grid.Row="1" TextChanged="DescriptionTxt_TextChanged" />
            <RadioButton IsChecked="True" Content="  اعتبار ندارد" FlowDirection="RightToLeft" FontFamily="B Nazanin" FontSize="20" Height="26" HorizontalAlignment="Left" Margin="305,419,0,0" x:Name="DisqualifiedRadio" TabIndex="7" VerticalAlignment="Top" ToolTip="انتخاب یکی از گزینه ها الزامی است" Checked="DisqualifiedRadio_Checked" />
