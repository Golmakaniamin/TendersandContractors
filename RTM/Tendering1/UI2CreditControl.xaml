            <ComboBox SelectedValue="{Binding FundingControlAssignee}" FlowDirection="RightToLeft" FontFamily="B Nazanin" FontSize="20" FontWeight="Normal" HorizontalAlignment="Right" Margin="0,0,270,42" x:Name="CreditControlerManCom" SelectedIndex="-1" TabIndex="2" VerticalContentAlignment="Center" Width="230" Height="32" VerticalAlignment="Bottom" IsEnabled="False" DisplayMemberPath="Family" SelectedValuePath="UserId"/>
