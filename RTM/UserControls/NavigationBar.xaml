<UserControl x:Class="RTM.UserControls.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RTM.Classes"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
    	<ListBox x:Name="listBox" ItemsPanel="{DynamicResource LayoutTemplate}" ItemContainerStyle="{DynamicResource ListBoxItemStyle1}" Background="{x:Null}" BorderBrush="{x:Null}" AlternationCount="2" Padding="0"/>
    </Grid>
</UserControl>